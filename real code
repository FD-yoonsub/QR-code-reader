    <a class="btn" id="driveLink" href="https://drive.worksmobile.com/drive/web/share/folder/viewer?resourceKey=QDIwMDEwMDAwMDA0NTM2Nzl8MzQ3MjYwODU3Mzg0NDU3MjQyNXxEfDA&resourceLocation=24101" target="_blank" rel="noopener">
      네이버 드라이브 폴더 열기
    </a>

    <div class="muted" id="raw"></div>
  </div>

  <script>
    // 1) URL에서 끝 10자리 뽑기 (쿼리/해시 제외하고 "주소 본문"만 사용)
    const url = new URL(location.href);
    const base = (url.origin + url.pathname).replace(/\/$/, ""); // 끝 슬래시 제거
    const last10 = base.slice(-10);

    document.getElementById("last10").textContent = last10 || "(표시할 값 없음)";
    document.getElementById("raw").textContent = "접속 URL: " + base;
  </script>
